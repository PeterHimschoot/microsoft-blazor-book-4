@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter <Badge>Bootstrap</Badge></h1>

<p role="status">Current count: @currentCount</p>

<Button Color="ButtonColor.Primary"@onclick="IncrementCount">Click me</Button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
